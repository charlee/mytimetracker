<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.intelliavant.mytimetracker.viewmodel.WorkViewModel" />

        <variable
            name="timerText"
            type="String" />

        <variable name="isRunning" type="Boolean"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="360dp"
        android:maxHeight="360dp"
        android:layout_marginTop="40dp"
        tools:context=".StopwatchFragment">

        <TextView
            android:id="@+id/work_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="32dp"
            android:text="@{viewModel.work.name}"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Computer" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="64dp"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceHeadline2"
            app:layout_constraintTop_toBottomOf="@id/work_name"
            android:text="@{timerText}"
            tools:text="00:00:00" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pause_resume_button"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginBottom="64dp"
            app:icon="@{isRunning ? @drawable/ic_baseline_pause_64 : @drawable/ic_baseline_play_arrow_64}"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="96dp"
            android:padding="0dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyTimeTracker.Button.Circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <Button
            android:id="@+id/stop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:gravity="center"
            android:text="Stop Activity"
            android:visibility="@{isRunning ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>